//This is XML File
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:padding="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edvalues"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#0F000000"
            android:clickable="false"
            android:contextClickable="false"
            android:enabled="false"
            android:focusable="true"
            android:gravity="end"
            android:textAlignment="viewEnd"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/tvresult"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="end"
            android:layout_marginBottom="30dp"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="2dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            style="@style/btnrows">

            <Button
                style="@style/btnnumbers"
                android:id="@+id/btnac"
                android:background="@color/orange"
                android:text="AC">

            </Button>
            <Button
                style="@style/btnnumbers"
                android:id="@+id/btnbackspace"
                android:drawableTop="@drawable/ic_baseline_backspace_24"
                android:paddingTop="45dp"
                android:background="@color/black">

            </Button>
            <Button
                style="@style/btnnumbers"
                android:id="@+id/btnmodulo"
                android:background="@color/black"
                android:text="%">

            </Button>

            <Button
                style="@style/btnnumbers"
                android:id="@+id/btndiv"
                android:background="@color/black"
                android:text="/">

            </Button>

        </LinearLayout>

        <LinearLayout
            style="@style/btnrows">

            <Button
                style="@style/btnnumbers"
                android:id="@+id/btn7"
                android:text="7">

            </Button>
            <Button
                style="@style/btnnumbers"
                android:id="@+id/btn8"
                android:text="8">

            </Button>
            <Button
                style="@style/btnnumbers"
                android:id="@+id/btn9"
                android:text="9">

            </Button>
            <Button
                style="@style/btnnumbers"
                android:id="@+id/btnmul"
                android:background="@color/black"
                android:text="*">

            </Button>

        </LinearLayout>

        <LinearLayout
            style="@style/btnrows">

            <Button
                style="@style/btnnumbers"
                android:id="@+id/btn4"
                android:text="4">

            </Button>
            <Button
                style="@style/btnnumbers"
                android:id="@+id/btn5"
                android:text="5">

            </Button>
            <Button
                style="@style/btnnumbers"
                android:id="@+id/btn6"
                android:text="6">

            </Button>
            <Button
                style="@style/btnnumbers"
                android:id="@+id/btnsub"
                android:background="@color/black"
                android:text="-">

            </Button>

        </LinearLayout>

        <LinearLayout
            style="@style/btnrows">

            <Button
                style="@style/btnnumbers"
                android:id="@+id/btn1"
                android:text="1">

            </Button>
            <Button
                style="@style/btnnumbers"
                android:id="@+id/btn2"
                android:text="2">

            </Button>
            <Button
                style="@style/btnnumbers"
                android:id="@+id/btn3"
                android:text="3">

            </Button>
            <Button
                style="@style/btnnumbers"
                android:id="@+id/btnadd"
                android:background="@color/black"
                android:text="+">

            </Button>

        </LinearLayout>

        <LinearLayout
            style="@style/btnrows">

            <Button
                style="@style/btnnumbers"
                android:id="@+id/btn00"
                android:text="00">

            </Button>

            <Button
                style="@style/btnnumbers"
                android:id="@+id/btn0"
                android:text="0">

            </Button>

            <Button
                style="@style/btnnumbers"
                android:id="@+id/btndot"
                android:text=".">

            </Button>

            <Button
                style="@style/btnnumbers"
                android:id="@+id/btnequal"
                android:background="@color/orange"
                android:text="=">

            </Button>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
